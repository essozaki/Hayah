@model Terms_ConditionsVM;


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="">
    <div class="">

        <h2>حذف الشروط والاحكام</h2>

        <form asp-controller="TermsConditions" asp-action="Delete" class="form-group ">

            <div asp-validation-summary="All;" class="text-danger"></div>

            <input type="hidden" asp-for="Id" disabled class="form-control" />

            <label>التفاصيل </label>
            <input type="Text" asp-for="Details" disabled class="form-control" />
            <br />
            <br />


            <center>
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-controller="TermsConditions" asp-action="Edite" asp-route-id="@Model.Id" class="btn btn-primary">تعديل</a>

            </center>
            <br />
            <br />
        </form>
        <center>
            <a asp-controller="TermsConditions" asp-action="Index" class="btn btn-success">العودة</a>
        </center>
    </div>
</section>

