@model QuestionsVM;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Basic Vertical form layout section start -->
<section id="basic-vertical-layouts">
    <div class="row match-height">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">اضافه سؤال  </h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form class="form form-vertical" asp-action="Create" asp-controller="Questions" enctype="multipart/form-data">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                        <label for="first-name-vertical">السؤال </label>
                                        <input type="text" id="first-name-vertical" class="form-control" asp-for="Question" placeholder="Term Details">
                                        </div>
                                    </div>
                           
                                    <div class="col-12">
                                        <div class="form-group">
                                        <label for="first-name-vertical">الاجابه </label>
                                        <input type="text" id="first-name-vertical" class="form-control" asp-for="Answer" placeholder="Term Details">
                                        </div>
                                    </div>
                           
                           
                                   
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary mr-1 mb-1">حفظ</button>
                                        <button type="reset" class="btn btn-outline-warning mr-1 mb-1">الغاء</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            </div>
</section>
<!-- // Basic Vertical form layout section end -->
