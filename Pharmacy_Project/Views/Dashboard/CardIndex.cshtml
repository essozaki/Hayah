@model IEnumerable<CrewVM>;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="basic-examples">
    <div class="dt-buttons btn-group">
        <a asp-action="Create" asp-controller="Crew" class="btn btn-outline-primary" style="margin:20px">
            <span><i class="feather icon-plus"></i></span>
        </a>
    </div>
    <div class="row match-height">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-md-6 col-sm-12">
                <div class="card">
                    <div class="card-content">
                        <img class="card-img-top img-fluid" src="~/Uploads/Crew/@item.MemberImgUrl" alt="Card image cap">
                        <div class="card-body">
                            <h5>@item.MemberName</h5>
                            <p class="card-text  mb-0"> </p>
                            <span class="card-text">@item.MemberPosition</span>
                            <div class="card-btns d-flex justify-content-between mt-2">
                                <a asp-action="Edite" asp-controller="Crew" asp-route-id="@item.Id" class="btn gradient-light-primary text-white">Edite</a>
                                <a asp-action="Delete" asp-controller="Crew" asp-route-id="@item.Id" class="btn btn-outline-primary">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</section>



*@